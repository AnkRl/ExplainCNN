<KIOverlayWidget>:
    id: kiOverlay
    MDBoxLayout:
        orientation: "vertical"
        size: root.size
        pos_hint: {'center_x': .5, 'center_y': 0.9}
        spacing: "30px"

        MDSpinner:
            size_hint: None, None
            size: dp(50), dp(50)
            active: root.network_status
            pos_hint: {'center_x': .5, 'center_y': 0.5}

        MDRoundFlatButton:
            text: "Vergleiche mit KI"
            on_press: root.hit_compare = True
            pos_hint: {'center_x': .5, 'center_y': 0.5}
            disabled: root.network_status

<KIImageWidget>    
    MDBoxLayout:
        orientation: "vertical"
        size: root.size
        id: kiImage 
        
        MDRectangleFlatIconButton:
            size_hint: 1,0.2
            icon: "robot-confused"
            pos_hint: {'center_x': .5, 'center_y': 0.5}
            text: '"' + root.prediction + '"'
            line_color: "white"
            disabled: True
            font_size: "25sp"
                

<UserImageWidget>
    MDBoxLayout:
        orientation: "vertical"
        size: root.size
        id: userImage 

        MDRectangleFlatIconButton:
            size_hint: 1,0.2
            icon: "account-eye"
            pos_hint: {'center_x': .5, 'center_y': 0.5}
            text: '"' + root.user_prediction + '"'
            line_color: "white"
            disabled: True
            font_size: "25sp"

<UserAnnotationsWidget>:
    MDBoxLayout:
        orientation: "vertical"
        id: userAnnotations
        size: root.size
        
        MDLabel:
            text: "Was siehst du?"
            halign: "left"
            role: "large"
            size_hint: 1,0.1

        MDTextField:
            id: userInput
            hint_text: "Tippe ein was du siehst"
            size_hint: 1,0.2

        MDLabel:
            text: "Markiere die Bildbereiche"
            halign: "left"
            size_hint: 1,0.1
