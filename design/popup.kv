<GalleryPopup>
    title: "Choose an image"
    size_hint: None, None
    size: 500,500
    auto_dismiss: False
    
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            id: grid
            cols: 3
            rows: 4

        MDFlatButton:
            text: 'Close Gallery'
            on_release: root.dismiss()

#######################

<CameraPopup>
    title: "Take Picture"
    size_hint: None, None
    size: 400,400
    
    BoxLayout:
        orientation: "horizontal"
        Camera:
            id: camera
            resolution: (640, 480)
            play: True
        Button:
            text: 'Capture'
            size_hint_y: None
            height: '48dp'
            on_press: 
                root.capture()
        MDFlatButton:
            text: 'Close Camera'
            on_release: root.dismiss()