<ModeOptionCard>
    padding: "5dp"
    size_hint: None, None
    size: "240dp", "240dp"
    style:"elevated"
    ripple_behavior: True
    focus_behavior: True

    on_press: root.parent.parent.on_click_option(root.text)

    MDBoxLayout:
        orientation: 'vertical'

        MDIconButton:
            icon: root.icon
            theme_icon_color: "Custom"
            icon_color: app.theme_cls.primary_color
            icon_size: "80sp"
            pos_hint: {"center_x": .5}
            size_hint: 1,0.7
            on_press: root.parent.parent.on_click_option(root.text)

        MDLabel:
            text: root.text
            halign: "center"
            color: "grey"
            bold: True
            size_hint: 1,0.3


<GalleryImageCard>
    radius: [0, ]
    size_hint: None, None
    size: "100px", "64px"
    ripple_behavior: True
    focus_behavior: True
    on_press: 
        root.parent.parent.parent.parent.parent.on_click_image(root.image_path)

    FitImage:
        source: root.image_path